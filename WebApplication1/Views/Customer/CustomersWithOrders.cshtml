@model List<Customer>
@{
    ViewData["Title"] = "Клиенты с заказами";
}

<h1>Клиенты с заказами</h1>
<p class="text-muted">Все клиенты, у которых есть хотя бы один заказ</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Email</th>
            <th>Количество заказов</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@(customer.Orders?.Count ?? 0)</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Назад</a>