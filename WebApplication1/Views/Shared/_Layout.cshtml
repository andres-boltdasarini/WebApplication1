<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Проверка палиндромов</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Стили приложения -->
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .card {
            border-radius: 15px;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .btn-lg {
            border-radius: 10px;
            padding: 12px 30px;
        }

        .form-control-lg {
            border-radius: 10px;
            padding: 15px;
        }

        .example-btn {
            transition: all 0.3s;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 10px;
        }

            .example-btn:hover {
                transform: translateX(5px);
            }

        .footer {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Навигация -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-search me-2"></i>Палиндромы
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Главная
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "HowItWorks" ? "active" : "")"
                           asp-controller="Home" asp-action="HowItWorks">
                            <i class="fas fa-question-circle me-1"></i>Как это работает
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "About" ? "active" : "")"
                           asp-controller="Home" asp-action="About">
                            <i class="fas fa-info-circle me-1"></i>О программе
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Основное содержимое -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Футер -->
    <footer class="footer mt-auto py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-code"></i> Проверка палиндромов</h5>
                    <p class="mb-0">Простое и удобное приложение для проверки текстов на палиндромы</p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="mb-0">
                        &copy; @DateTime.Now.Year - Палиндромы
                        <span class="text-muted ms-2">v1.0</span>
                    </p>
                    <small class="text-muted">Сделано с ❤️ на ASP.NET Core</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS + Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>